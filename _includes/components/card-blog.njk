{% macro show(minia, title, desc) %}

<div class='card-blog'>
    <div class='card__img'>
        <img src= {{ minia }} />
    </div>
    <div class='card__desc'>
        <h2 class='desc__title'>{{ title }}</h2>
        <p class='description'>{{ desc }}</p>
        <a class='cta cta--seemore'>Voir</a>
    </div>
</div>

{% endmacro %}